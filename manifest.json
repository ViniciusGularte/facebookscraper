{
  "manifest_version": 3,
  "name": "GrabClientsNow",
  "version": "0.3.0",
  "description": "A Chrome extension to watch Facebook groups and notify about new posts.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "scripting",
    "downloads"
  ],
  "host_permissions": ["https://www.facebook.com/*", "https://*.supabase.co/*"],
  "background": {
    "service_worker": "background.mjs",
    "type": "module"
  },
  "action": { "default_title": "GrabClientsNow" },
  "icons": { "128": "assets/icon.png" },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*"],
      "js": ["content/injectToggleButton.js", "content/scraper.js"],
      "run_at": "document_idle"
    }
  ]
}
